<Page x:Class="LOTTERIA_Kiosk.View.PaymentCompleted"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LOTTERIA_Kiosk.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentCompleted">

    <Grid>
        <StackPanel Margin="0 50 0 0">
        <TextBlock Text="결제가 완료되었습니다."
                   HorizontalAlignment="Center"
                   FontSize="24"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Height="30">
                <TextBlock Text="총 주문 금액: "
                           FontSize="18"
                           Foreground="Black" />
                <TextBlock Text="0"
                           Margin="10, 0, 0, 0"
                           x:Name="tbTotalPrice"
                           FontSize="18"
                           Foreground="Black" />
                <TextBlock Text="원"
                           FontSize="18"
                           Foreground="Black" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
            <TextBlock Text="주문번호 : "
                       VerticalAlignment="Center"
                       Name="text" />
                <TextBlock Text="000"
                           Name="tb_orderNumber"
                           VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="0" Name="autoMoveValue"/>
                <TextBlock Text="초 후 자동으로 이동합니다." />
            </StackPanel>
        </StackPanel>

        <Button Width="150"
                Height="150"
                Name="btn_GoHome"
                Click="btn_GoHome_Click">
            
                <TextBlock Text="홈으로 이동하기" 
                           HorizontalAlignment="Center"/>
        </Button>

        
    </Grid>
</Page>
