<Page x:Class="LOTTERIA_Kiosk.View.Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LOTTERIA_Kiosk.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Order">

    <Page.Resources>
        <Style x:Key="CategoryStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="BorderBrush" Value="#C63636"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#C63636"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Baskerville,Georgia"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <!-- 우측 영역 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>

            <!-- 메뉴 카테고리 -->
            <Grid Grid.Row="0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <ListBox x:Name="lbCategory">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBoxItem Content="햄버거" Style="{StaticResource CategoryStyle}"/>
                        <ListBoxItem Content="음료수" Style="{StaticResource CategoryStyle}"/>
                        <ListBoxItem Content="사이드 메뉴" Style="{StaticResource CategoryStyle}"/>
                        <ListBoxItem Content="세트 메뉴" Style="{StaticResource CategoryStyle}"/>
                    </ListBox>

                </StackPanel>
            </Grid>

            <!-- 메뉴 리스트 -->
            <Grid Grid.Row="1">
                

            </Grid>
        </Grid>

        <!-- 좌측 영역 -->
        <Grid Grid.Column="1">

        </Grid>


    </Grid>
    
</Page>
